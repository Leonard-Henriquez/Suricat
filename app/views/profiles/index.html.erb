<div class="container">
  <section class="row">
    <div class="col-sm-12">
      <h2>My Profile</h2>
    </div>
  </section>
  <section class= "row">
    <div class="col-sm-6 bg-white border border-light rounded">
      <div class="profile-criteria-overview">
        <h4>Radar</h4>
        <div class="d-flex flex-column justify-content-between">
          <div class="section-content mb-5">
            <%= component 'radar' %>
          </div>
          <div class="profile-edit-criteria mb-4">
            <div class="d-flex justify-content-around">
              <%= link_to 'Modify Criteria', '#', class: 'btn btn-primary' %>
              <%= link_to 'Modify Importances', '#', class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-3 bg-white border border-light rounded">
      <div class="profile-applications-status">
        <h4>Status</h4>
        <div class="d-flex flex-column">
          <div class="profile-not-reviewed d-flex justify-content-between">
            <%= link_to 'Not reviewed', '#', class: 'text-dark'%>
            <p><%= @user_opportunities.where(status: :review).count %></p>
          </div>
          <div class="profile-pending d-flex justify-content-between">
            <%= link_to 'Pending', '#', class: 'text-dark'%>
            <p><%= @user_opportunities.where(status: :pending).count %></p>
          </div>
          <div class="profile-applied d-flex justify-content-between">
            <%= link_to 'Applied', '#', class: 'text-dark'%>
            <p><%= @user_opportunities.where(status: :applied).count %></p>
          </div>
          <div class="profile-deadlines d-flex justify-content-between text-danger">
            <%= link_to 'Urgent deadlines', '#', class: 'text-danger'%>
            <p>1</p>
          </div>
          <div class="profile-interviews d-flex justify-content-between text-warning">
            <%= link_to 'Urgent deadlines', '#', class: 'text-warning'%>
            <p>1</p>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-3 bg-white border border-light rounded">
      <div class="profile-settings">
        <h4>Settings</h4>
        <div class="d-flex flex-column align-items-center">
          <div>
            <div class="settings-icon mb-2">
              <i class="fas fa-cog fa-7x" style="color: #adb5bd"></i>
            </div>
            <div class="button-settings">
            <%= link_to 'Settings', edit_user_registration_path, class: 'btn btn-primary' %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <section class="row">
    <div class="col-sm-12 bg-white">
      <h4>Your Opportunity Map</h4>
      <div class="map-legend d-flex m-2">
        <div class="map-legend-applied m-2">
          <i class="fas fa-map-marker-alt fa-2x" style="color: #0b409c"></i>
          <span class="align-bottom">Applied</span>
        </div>
        <div class="map-legend-pending m-2">
          <i class="fas fa-map-marker-alt fa-2x" style="color: #dd0a35"></i>
          <span class="align-bottom">Pending</span>
        </div>
      </div>
      <div id="map" style="width: 100%; height: 50%" data-markers="<%= @markers.to_json %>"></div>
    </div>
  </section>
</div>
