<div id="grid" class='row job-offer'>
  <div class="grid-item col-sm-7">
    <div class="row">
      <div class="col-sm-9">
        <div class='job-offer-top'>
          <%= image_tag asset_pack_path('images/logo-fb-noir.png'), class: 'img-center' %>
          <div class='job-offer-top--description'>
            <h2><%= @user_opportunity.job_title %></h2>
            <h4><%= @user_opportunity.company_name %></h4>
          </div>
        </div>
      </div>
      <div class="col-sm-3 text-right">
        <div class='job-offer-top--companylink'>
          <%= link_to 'Apply', @user_opportunity.url, class: 'btn btn-primary' %>
        </div>
        <div class='job-offer-top--grades'>
          <strong><%= @user_opportunity.personnal_grade %>/5</strong>
          <strong><%= @user_opportunity.automatic_grade %>/5</strong>
        </div>
      </div>
    </div>
  </div>

  <div class="grid-sizer grid-item col-sm-5">
    <div class='job-offer-user-infos section-content'>
      <table>
        <tr>
          <th scope="row">
            Status
          </td>
          <td>
            Pending
          </td>
        </tr>
        <tr>
          <th scope="row">
            Deadline
          </td>
          <td>
            31/01
          </td>
        </tr>
        <tr>
          <th scope="row">
            Start date
          </td>
          <td>
            31/01
          </td>
        </tr>
        <tr>
          <th scope="row">
            Contract
          </td>
          <td>
            VIE
          </td>
        </tr>
        <tr>
          <th scope="row">
            Structure
          </td>
          <td>
            Startup
          </td>
        </tr>
        <tr>
          <th scope="row">
            Industry
          </td>
          <td>
            Tech
          </td>
        </tr>
        <tr>
          <th scope="row">
            Salary
          </td>
          <td>
            2000 euros
          </td>
        </tr>
      </table>
    </div>
