<div id="job-container" class="row">
  <div class="col">
    <div class="job-offer">
      <div class="row">

        <div class="col-lg-12">
          <div class="row">

            <div class="col">
              <div class="job-offer-top">
                <% if @user_opportunity.logo.nil? %>
                  <%= image_tag asset_pack_path("images/company.png"), class: 'img-center' %>
                <% else %>
                  <%= image_tag @user_opportunity.logo, class: 'img-center' %>
                <% end %>
                <div class="job-offer-top--description">
                  <h3><%= sanitize @user_opportunity.title %></h3>
                  <h4><%= sanitize @user_opportunity.company_name %></h4>
                </div>

              </div>
            </div>

            <div class="col right-side text-right">
              <div class="trash-show zoom">
                <h4>
                  <%= link_to user_opportunity_path(@opportunity, status: :trash) + "&from=show", method: :patch, remote: false do %>
                    <i class="fas fa-trash text-gray"></i>
                  <% end %>
                </h4>
              </div>
              <div class="job-offer-top--companylink">
                <%= link_to 'Apply', @user_opportunity.url, target: "_blank", class: 'btn btn-primary' %>
              </div>

              <div class="job-offer-top--grades">
                <strong><%= @user_opportunity.personnal_grade %>/5</strong>
                <strong><%= @user_opportunity.automatic_grade %>%</strong>

              </div>
            </div>

          </div>
        </div>



        <div class="col-sm-12 d-md-none">
          <%= render partial: 'shared/opportunity_info', locals: { opportunity: @user_opportunity } %>
        </div>

        <div class="col-sm-12">
          <div class="job-offer-job--description">
            <h4>Job description</h4>
            <p class="text-justify">
              <% unless @user_opportunity.job_description.nil? %>
                <%= Kramdown::Document.new(@user_opportunity.job_description).to_html.html_safe %>
              <% end %>
            </p>
          </div>
        </div>

      </div>
    </div>
  </div>
  <div class="job-info d-none d-md-block">
    <%= render partial: 'shared/opportunity_info', locals: { opportunity: @user_opportunity } %>
    <div class="mt-2" id="map" style="width: 100%; height: 40%" data-marker="<%= @marker.to_json %>"></div>
  </div>
</div>
