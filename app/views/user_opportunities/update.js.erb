var d = document.querySelector("[data-job-id='<%= @user_opportunity.id %>']");
var animations = ["animationend", "animationend", "webkitAnimationEnd", "oanimationend", "MSAnimationEnd"];
animations.forEach((animation) => {
  d.addEventListener(animation, () => {
    d.remove();
  }, false );
});
d.className += (' removed-item');

<% [:review, :pending, :applied].each do |status| %>
  document.querySelector('#opportunity-number-<%= status %>').innerText = '(<%=  @user_opportunities.where(status: status).count %>)';
<% end %>
