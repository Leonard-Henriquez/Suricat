<div class='job-offer-user-infos light-box section-content'>
  <table>
    <tr>
      <th scope="row">
        Status
      </td>
      <td>
        <%= t("opportunity.status.#{opportunity.status}") %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Deadline
      </td>
      <td>
        <%= opportunity.deadline %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Start date
      </td>
      <td>
        <%= opportunity.start_date %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Contract
      </td>
      <td>
        <% unless opportunity.contract_type.nil? %>
          <%= t("opportunity.contract_type.#{opportunity.contract_type}") %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Structure
      </td>
      <td>
        <% unless opportunity.company_structure.nil? %>
          <%= t("company.structure.#{opportunity.company_structure}") %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Industry
      </td>
      <td>
        <%= opportunity.sector_name %>
      </td>
    </tr>
    <tr>
      <th scope="row">
        Salary
      </td>
      <td>
        <%= opportunity.salary.nil? ? 'N/A' : "#{opportunity.salary}  â‚¬" %>
      </td>
    </tr>
  </table>
</div>
