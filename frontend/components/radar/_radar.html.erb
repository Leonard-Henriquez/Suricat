<div class="radar">
  <% if @importances_values.nil? %>
    <script>SuricatGlobalObject.importancesValues = {}:</script>
  <% else %>
    <% values = Hash[@importances_values.map { |k,v| [t("importance.name.#{k}"),v] }] %>
    <script>SuricatGlobalObject.importancesValues = <%= values.to_json.html_safe %>;</script>
  <% end %>
  <canvas id="chartjs"></canvas>
</div>
